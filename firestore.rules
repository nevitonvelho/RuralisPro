rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Regra para a coleção 'users' (Preserved from your existing rules)
    match /users/{documentId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == documentId || 
        resource.data.email == request.auth.token.email
      );
      allow write: if isAuthenticated();
    }

    // Allow users to read/write their own clients
    match /clients/{clientId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Allow users to read/write their own reports
    match /reports/{reportId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Allow users to read/write their own technicians
    match /technicians/{techId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Allow users to manage their settings (subcollection)
    match /users/{userId}/settings/{document=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
